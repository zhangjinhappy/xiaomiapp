#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  "$basedir/node"  "$basedir/../_node-dev@3.1.3@node-dev/bin/node-dev" "$@"
  ret=$?
else 
  node  "$basedir/../_node-dev@3.1.3@node-dev/bin/node-dev" "$@"
  ret=$?
fi
exit $ret
